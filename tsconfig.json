{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "rootDirs": ["src"],
        "skipLibCheck": true,
        "strictNullChecks": true,
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "src",
        "paths": {
            "@screens/*": ["screens/$1"],
            "@utils/*": ["utils/$1"],
            "@helpers/*": ["helpers/$1"],
            "@components/*": ["components/$1"]
        }
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.ts", "modules"]
}
