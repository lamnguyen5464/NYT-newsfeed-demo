{
    "presets": ["module:metro-react-native-babel-preset"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./"],
                "extensions": [".ts", ".tsx", ".js", ".json"],
                "alias": [
                    {
                        "@screens": "./src/screens",
                        "@utils": "./src/utils",
                        "@helpers": "./src/helpers",
                        "@components": "./src/components"
                    }
                ]
            }
        ]
    ]
}
